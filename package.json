{
	"name": "starcoin-ide",
	"version": "0.6.0",
	"description": "Starcoin IDE for VSCode",
	"publisher": "starcoinorg",
	"displayName": "Starcoin IDE",
	"icon": "img/icon-128.png",
	"categories": [
		"Programming Languages",
		"Snippets",
		"Other"
	],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:move"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "starcoin.check",
				"title": "Starcoin: Check"
			},
			{
				"command": "starcoin.doctor",
				"title": "Starcoin: Doctor"
			},
			{
				"command": "starcoin.testUnit",
				"title": "Starcoin: Test Unit"
			},
			{
				"command": "starcoin.testFunctional",
				"title": "Starcoin: Test Functional"
			},
			{
				"command": "starcoin.publish",
				"title": "Starcoin: Publish"
			},
			{
				"command": "starcoin.release",
				"title": "Starcoin: Release"
			},
			{
				"command": "starcoin.clean",
				"title": "Starcoin: Clean"
			}
		],
		"configuration": {
			"title": "Starcoin IDE",
			"properties": {
				"starcoin.buildDirectory": {
					"type": "string",
					"default": ".",
					"description": "Directory to store build artifacts"
				},
				"starcoin.storageDirectory": {
					"type": "string",
					"default": ".",
					"description": "Directory to store chain storage"
				}
			}
		}
	},
	"scripts": {
		"clean": "rimraf dist/",
		"copy-files": "copyfiles -u 1 src/**/*.* dist/",
		"vscode:prepublish": "rm bin/*; npm run compile",
		"compile": "tsc -p ./ && yarn copy-files",
		"watch": "tsc -watch -p ./",
		"publish": "vsce publish -p",
		"package": "vsce package",
		"test:unit": "yarn compile && node ./dist/test/unit/runTest.js",
		"test:functional": "yarn clean && yarn compile && node ./dist/test/functional/runTest.js",
		"test": "yarn clean && yarn compile && node ./dist/test/unit/runTest.js && node ./dist/test/functional/runTest.js"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/starcoinorg/starcoin-ide.git"
	},
	"keywords": [
		"libra",
		"move",
		"ide",
		"move syntax",
		"move ide",
		"move-ide",
		"libra-ide",
		"diem",
		"diem-ide",
		"starcoin",
		"starcoin-ide"
	],
	"author": "Starcoin Team <starcoin.org>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/starcoinorg/starcoin-ide/issues"
	},
	"homepage": "https://github.com/starcoinorg/starcoin-ide#readme",
	"extensionDependencies": [
		"damirka.move-syntax"
	],
	"devDependencies": {
		"@types/fs-extra": "^9.0.13",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.0",
		"@types/node": "^14.0.1",
		"@types/vscode": "^1.43.0",
		"@vscode/test-electron": "^2.0.0",
		"copyfiles": "^2.4.1",
		"glob": "^7.1.6",
		"glob-array": "^1.0.0",
		"mocha": "^8.2.1",
		"request": "^2.88.2",
		"request-progress": "^3.0.0",
		"standard-version": "^9.3.1",
		"typescript": "^4.1.3",
		"vsce": "^1.77.0"
	},
	"dependencies": {
		"destroy": "^1.2.0",
		"fs-extra": "^10.0.1",
		"node-version-compare": "^1.0.3",
		"rimraf": "^3.0.2",
		"unzipper": "^0.10.11",
		"wget-improved": "^3.3.0"
	}
}
